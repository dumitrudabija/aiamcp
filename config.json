{
  "aia_framework": {
    "name": "Canada's Algorithmic Impact Assessment",
    "version": "1.0",
    "total_questions": 162,
    "max_possible_score": 298
  },
  "scoring_thresholds": {
    "level_1": {
      "name": "Level I - Very Low Impact",
      "min_score": 0,
      "max_score": 30,
      "description": "Minimal oversight required. Standard operational procedures apply.",
      "review_frequency": "annually"
    },
    "level_2": {
      "name": "Level II - Low Impact", 
      "min_score": 31,
      "max_score": 55,
      "description": "Enhanced oversight required. Additional documentation and monitoring needed.",
      "review_frequency": "quarterly"
    },
    "level_3": {
      "name": "Level III - Moderate Impact",
      "min_score": 56,
      "max_score": 75,
      "description": "Qualified oversight required. Comprehensive governance and regular auditing needed.",
      "review_frequency": "monthly"
    },
    "level_4": {
      "name": "Level IV - High Impact",
      "min_score": 76,
      "max_score": 999,
      "description": "Qualified oversight and approval required. Extensive governance, monitoring, and external validation needed.",
      "review_frequency": "weekly"
    }
  },
  "question_categorization": {
    "technical_keywords": [
      "system", "algorithm", "data", "technology", "automated", "machine learning",
      "artificial intelligence", "processing", "digital", "software", "platform",
      "database", "api", "integration", "interface", "workflow"
    ],
    "impact_risk_keywords": [
      "impact", "risk", "consequence", "effect", "harm", "benefit", "outcome",
      "result", "influence", "affect", "damage", "advantage", "disadvantage",
      "bias", "fairness", "discrimination", "equity", "accessibility"
    ],
    "manual_keywords": [
      "consultation", "approval", "review", "oversight", "governance", "policy",
      "legal", "compliance", "audit", "assessment", "evaluation", "training",
      "staff", "personnel", "budget", "cost", "timeline", "schedule"
    ],
    "overrides": {
      "riskProfile1": "impact_risk",
      "riskProfile2": "impact_risk",
      "projectAuthority1": "manual",
      "decisionSector1": "manual"
    }
  },
  "jira_integration": {
    "enabled": false,
    "server_url": "https://your-company.atlassian.net",
    "project_key": "AIA",
    "issue_type": "Task",
    "components": ["Compliance", "Risk Management"],
    "priority_mapping": {
      "1": "Low",
      "2": "Medium",
      "3": "High", 
      "4": "Critical"
    },
    "custom_fields": {
      "aia_score_field": "customfield_10001",
      "impact_level_field": "customfield_10002",
      "automation_rate_field": "customfield_10003"
    },
    "authentication": {
      "type": "basic",
      "username": "JIRA_USERNAME_PLACEHOLDER",
      "api_token": "JIRA_API_TOKEN_PLACEHOLDER"
    }
  },
  "mcp_server": {
    "name": "aia-assessment-server",
    "version": "1.0.0",
    "timeout_seconds": 30,
    "max_questions_per_batch": 10,
    "max_response_size_mb": 5,
    "enable_detailed_logging": true,
    "log_level": "INFO",
    "performance_monitoring": true
  },
  "ai_integration": {
    "note": "Claude Desktop handles all AI reasoning - no API keys needed in MCP server",
    "claude_provides": [
      "Question analysis and answering",
      "Reasoning generation", 
      "Risk assessment logic",
      "Compliance recommendations"
    ],
    "mcp_server_provides": [
      "AIA framework structure",
      "Question categorization",
      "Score calculation",
      "Impact level determination",
      "Report generation",
      "JIRA integration"
    ]
  },
  "validation": {
    "require_all_questions": false,
    "minimum_questions_for_assessment": 10,
    "validate_question_ids": true,
    "validate_choice_values": true,
    "strict_scoring": true
  },
  "export_settings": {
    "include_metadata": true,
    "include_framework_details": true,
    "json_indent": 2,
    "timestamp_format": "ISO8601"
  }
}
